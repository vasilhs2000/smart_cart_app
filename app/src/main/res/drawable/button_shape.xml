<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#080C0C0C" /> <!-- Χρώμα της σκιάς όταν πατηθεί το κουμπί -->
            <corners android:radius="8dp" /> <!-- Στρογγυλεμένες γωνίες -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#008577" /> <!-- Χρώμα του κουμπιού όταν δεν πατιέται -->
            <corners android:radius="8dp" /> <!-- Στρογγυλεμένες γωνίες -->
            <stroke android:width="1dp" android:color="#80000000" />

        </shape>
    </item>
</selector>
